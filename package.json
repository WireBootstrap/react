{
  "name": "wire-react-sample",
  "description": "WireBootstrap for React Sample Application",
  "license": "https://www.wirebootstrap.com/license/themes-license.html",
  "version": "1.1.4",
  "private": true,
  "dependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.39",
